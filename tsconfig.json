{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "module": "es2020",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["assets/components/*"],
      "@lib/*": ["assets/lib/*"],
      "@styles/*": ["assets/styles/*"],
      "@type/*": ["assets/type/*"],
    },
    "sourceMap": true,
    "target": "ES2015"
  },
  "include": ["assets/**/*"]
}
